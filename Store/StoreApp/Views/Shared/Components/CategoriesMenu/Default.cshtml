@model IEnumerable<Category>

<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Categories
    </h6>
</div>



<div class="my-4">
    <ul class="list-group">
        @foreach(var cat in Model)
        {
            <div class="list-group">
                <a class="list-group-item list-group-item-action list-group-item-secondary text-center" asp-action="Index" asp-route-categoryId="@cat.CategoryId">
                    @cat.CategoryName
                </a>
            </div>
        }
    </ul>
</div>

