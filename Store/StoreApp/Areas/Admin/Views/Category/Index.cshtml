@model IEnumerable<Category>

<div class="text-center my-3">
    <h6 class="display-6">
        Categories
    </h6>
</div>
<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                <th scope="row">@cat.CategoryId</th>
                <td>@cat.CategoryName</td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                            asp-action="Update" asp-route-id="@cat.CategoryId">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                            asp-action="Delete" asp-route-id="@cat.CategoryId">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
}